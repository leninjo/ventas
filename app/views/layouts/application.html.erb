<!DOCTYPE html>
<html>
  <head>
    <title>4sale</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="main">
      <%= render 'layouts/navigation'%>
      <div class="izquierda">
        <%= render 'layouts/aside'%>
      </div>
      <div class="centro">
        <%= yield %>
      </div>
      <div class="abajo">
        <%= render 'layouts/messages'%>
      </div>
    </div>
  </body>
</html>
