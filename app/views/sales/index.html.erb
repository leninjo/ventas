<div>
<p class="subtitle is-size-3 has-text-centered has-text-light my-2">Ventas</p>

</div>
<div class="columns">
    <div class="column is-10 is-offset-1">
        <%= link_to new_sale_path, {remote: true, class: "button mb-1 is-pulled-left btn-no-text"} do %>
            <i class="fa fa-plus"></i>
        <% end %>
        <table class="table is-fullwidth">
            <thead text>
                <tr>
                    <th>ID de Producto</th>
                    <th>Importe</th>
                    <th colspan="2">Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% if @ventas.empty? %>
                <tr>
                    <td>No hay ventas</td>
                </tr>
                <% else %>
                    <% @ventas.each do |venta|%>
                    <tr>
                        <td><%= venta.id %></td>
                        <td><%= venta.importe %></td>
                        <td><i><%= link_to "", sale_path(venta), method: :delete, class: "fa fa-trash has-text-danger btn-action-delete", data: {confirm: "¿Estás seguro de eliminar la venta?"}%></i></td>
                    <% end %>
                    </tr>
                <% end %>
            </tbody>
        </table>
    <%# <%= will_paginate @ventas, renderer: BulmaPagination::Rails, :previous_label => t("anterior"), :next_label => t("siguiente"), class: 'is-rounded is-centered' %>    %>
        <div class="modal" id="modal-cat">
            <div class="modal-background"></div>
            <div class="modal-card">
                <!--<header class="modal-card-head">
                <p class="modal-card-title"></p>
                <button class="delete" aria-label="close"></button>
                </header>-->
                <section class="modal-card-body">
                </section>
            </div>
        </div>
    </div>
</div>