<h1 class="title is-size-4   has-text-centered has-text-dark my-2 mb-3">Registrarme</h1>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.text_field :username, class: "input", autofocus: true, autocomplete: "nombre", placeholder: "nombre"%>
  </div>

  <div class="field">
    <%= f.email_field :email, class: "input", autocomplete: "email", placeholder: "correo" %>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
    <em><small>(<%= @minimum_password_length %> caracteres minimos)</small></em>
    <% end %>
    <%= f.password_field :password, class: "input", placeholder: "contraseña", autocomplete: "new-password" %>
  </div>

  <div class="field mb-5">
    <%= f.password_field :password_confirmation, class: "input", placeholder: "confirmar contraseña", autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Registrarme", class: "button is-info is-fullwidth"%>
  </div>  
<% end %>
<%= link_to "Iniciar Sesión", new_user_session_path, class: "button is-fullwidth mt-2 is-primary"%>

