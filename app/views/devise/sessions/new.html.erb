<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <h1 class="title is-size-4 has-text-centered has-text-dark">4SALE</h1>
  <div class="field field-login my-0">
    <!--<label for="" class="label">Correo</label>-->
    <%= f.email_field :email, autofocus: true, class: "input", placeholder: "Correo" %>
  </div>
  <div class="field field-login">
    <%= f.password_field :password, class: "input", placeholder: "Contraseña" %>
  </div>

  <!--<% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>-->
  <div class="actions mx-5">
    <%= f.submit "Iniciar Sesión", class: "button is-info is-fullwidth my-2" %>
    <%= link_to "Registrarme", new_user_registration_path, class: "button is-danger is-outlined is-fullwidth" %>
  </div>
<% end %>

