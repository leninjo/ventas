<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <h1 class="title is-1 has-text-centered has-text-dark titulo-login">ADMIN</h1>
  <hr>
  <div class="field field-login">
    <!--<label for="" class="label">Correo</label>-->
    <%= f.email_field :email, autofocus: true, class: "input", placeholder: "Correo" %>
  </div>
  <div class="field field-login">
    <%= f.password_field :password, class: "input", placeholder: "Contraseña" %>
  </div>

  <!--<% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>-->
  <hr>
  <div class="actions">
    <%= f.submit "Iniciar Sesión", class: "button is-primary is-rounded is-outlined" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
